<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:8889/OnlineEvent</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.connection.password">root</property>
  <property name="hibernate.connection.pool_size">10</property>
  <property name="show_sql">true</property>
  <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <!-- Mapping files -->
  <mapping resource="VO/category.hbm.xml"/>
  <mapping resource="VO/foodcategory.hbm.xml"/>
  <mapping resource="VO/addcountry.hbm.xml"/>
  <mapping resource="VO/subcategory.hbm.xml"/>
   <mapping resource="VO/state.hbm.xml"/>
    <mapping resource="VO/foodsubcat.hbm.xml"/>
     <mapping resource="VO/city.hbm.xml"/>
    <mapping resource="VO/package.hbm.xml"/>
   <mapping resource="VO/fooditem.hbm.xml"/>
   <mapping resource="VO/gallery.hbm.xml"/>
  <mapping resource="VO/scheme.hbm.xml"/> 
  <mapping resource="VO/hotel.hbm.xml"/> 
  <mapping resource="VO/invitationcard.hbm.xml"/> 
  <mapping resource="VO/admin.hbm.xml"/>
   <mapping resource="VO/signup.hbm.xml"/>
   <mapping resource="VO/login.hbm.xml"/>
   <mapping resource="VO/contact.hbm.xml"/>
   <mapping resource="VO/select.hbm.xml"/>
     <mapping resource="VO/blog.hbm.xml"/> 
     
   

</session-factory>
</hibernate-configuration>
